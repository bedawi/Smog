<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.benjamindahlhoff.smog.UI.MainActivity">

    <TextView
        android:text="@string/air_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>


    <Button
        android:text="@string/reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/reloadButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/FeinstaubStationsLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/headingTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/valuePM25Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_green_dark"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/valuePM25TypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="PM2.5"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#abffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/pm25ValueView"
                android:layout_width="match_parent"
                android:text="10,00"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/pm25UnitsView"
                android:layout_width="wrap_content"
                android:text="µg/m3"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/pm25DistanceView"
                android:layout_width="wrap_content"
                android:text="10KM away"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/valuePM10Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_green_dark"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/valuePM10TypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="PM10"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#abffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/pm10ValueView"
                android:layout_width="match_parent"
                android:text="10,00"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/pm10UnitsView"
                android:layout_width="wrap_content"
                android:text="µg/m3"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/pm10DistanceView"
                android:layout_width="wrap_content"
                android:text="10KM away"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/valueTemperatureButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_green_dark"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/valueTemperatureTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="TEMP"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#abffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/temperatureValueView"
                android:layout_width="match_parent"
                android:text="10,00"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/temperatureUnitsView"
                android:layout_width="wrap_content"
                android:text="°C"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/temperatureDistanceView"
                android:layout_width="wrap_content"
                android:text="10KM away"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"/>


        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/FeinstaubStationsLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/valueCOButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_green_dark"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/valueCOTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="CO"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#abffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/coValueView"
                android:layout_width="match_parent"
                android:text="10,00"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/coUnitsView"
                android:layout_width="wrap_content"
                android:text="ppm"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/coDistanceView"
                android:layout_width="wrap_content"
                android:text="10KM away"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"/>


        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
