<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.benjamindahlhoff.smog.UI.MainActivity">

    <TextView
        android:text="@string/air_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>


    <Button
        android:text="@string/reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/reloadButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/StationsListLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/headingTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/StationsListLayout"
        android:id="@+id/FeinstaubInfoLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/stationInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feinstaub_infotext"
                android:fontFamily="sans-serif"
                android:textSize="8sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:text="@string/show_all_stations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showStationsButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/reloadButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_light"/>

    <TextView
        android:text="Nothing here right now. Will change in next version."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FeinstaubInfoLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:id="@+id/textView"/>

</RelativeLayout>
