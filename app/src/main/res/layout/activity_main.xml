<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.benjamindahlhoff.smog.UI.MainActivity">

    <TextView
        android:text="@string/particulates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_below="@+id/coPrecisionView"
        android:layout_centerHorizontal="true"/>



    <TextView
        android:text="P1:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/p1ValueView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:text="P2:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p2ValueView"
        android:layout_below="@+id/p1ValueView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"/>

    <TextView
        android:text="temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureValueView"
        android:textAlignment="center"
        android:layout_below="@+id/p2ValueView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/humidityView"
        android:textAlignment="center"
        android:layout_below="@+id/temperatureValueView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distanceView"
        android:layout_below="@+id/humidityView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:text="@string/pollution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textSize="24sp"
        />

    <TextView
        android:text="CO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coValueView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="Pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coPressureView"
        android:layout_below="@+id/coValueView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coPrecisionView"
        android:layout_below="@+id/coPressureView"
        android:layout_alignRight="@+id/coPressureView"
        android:layout_alignEnd="@+id/coPressureView"/>

    <Button
        android:text="@string/reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/reloadButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>
